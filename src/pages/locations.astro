---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Locations" subtitle="Ubicaciones" hero="IMG_7819.jpeg"> 
  <div class="flex-row">
    <div class="flex-1 text-section">
      <i class="fa-brands fa-pagelines"></i>
      <h2>SUMMER 2023</h2>
      <p>We're constantly on the move so check back frequently!</p>
      <div class="divider"></div>
    </div>
  </div>
  <div class="flex-row">
    <div class="flex-1">
      <img src="./images/market_1.jpeg" />
    </div>
    <div class="flex-1">
      <i class="fa-solid fa-tractor"></i>
      <h3>Evergreen Farmers Market</h3>
      <p>Tuesdays 10am - 2pm</p>
      <p>29260 US-40, Evergreen, CO 80439</p>
      <a href="https://farmersmarketscolorado.com/">https://farmersmarketscolorado.com/</a>
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12279.125410612593!2d-105.34141625963092!3d39.69961978438501!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x876b9f3cc56b5e3b%3A0xfdf288e9e40f485!2sEvergreen%20Farmers&#39;%20Market!5e0!3m2!1sen!2sus!4v1694969601148!5m2!1sen!2sus" width="600" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </div>
  <div class="flex-row">
    <div class="flex-1">
      <i class="fa-solid fa-store"></i>
      <h3>Lakewood Farmers Market</h3>
      <p>Saturdays 10am - 2pm</p>
      <p>9077 W Alameda Ave, Lakewood, CO 80226</p>
      <a href="http://www.denverfarmersmarket.com/index.html">http://www.denverfarmersmarket.com/index.html</a>
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12277.016856650633!2d-105.11800564458008!3d39.7114693!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x876b8139a1a65bd3%3A0xc04248a8f5d2dbb4!2sLakewood%20Farmers%20Market%20by%20Metro%20Denver%20Farmers%20Markets!5e0!3m2!1sen!2sus!4v1694928421191!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <div class="flex-1">
      <img src="./images/market_2.jpeg" />
    </div>
  </div>
  <div class="flex-row">
    <div class="flex-1 text-section">
      <i class="fa-solid fa-pizza-slice"></i>
    </div>
  </div>
</PageLayout>

<style lang="scss">
  :global(.flex-row) {
    margin: 0;
    &:nth-of-type(3) {
      @media only screen and (max-width: $tablet-sm) {
      flex-direction: column-reverse;
    }
    }
  }
  :global(.flex-1) {
    background: white;
    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    iframe {
      height: 200px;
      width: 300px;
      margin: $margin-lg;
    }
    img {
      width: 100%;
    }
    i {
      font-size: 60px;
      margin: $margin 0;
      color: $quaternary;
    }
  }
  h2 {
    font-family: $font-secondary;
    font-size: $font-size-xl;
    margin: $margin-xs 0;
    color: $secondary;
  }
  h3 {
    margin: $margin-xs 0;
    font-size: $font-size-lg;
  }
  .text-section {
    padding: $padding-xxl $padding;
    background: $tertiary;
    text-align: center;
    i {
      font-size: 120px;
    }
  }
  p {
    margin: $margin-xs 0;
  }

  .divider {
    margin-top: $margin;
    height: 2px;
    width: 140px;
    background-color: $secondary;
  }
  
  a {
    color: $secondary;
  }
 

</style>
